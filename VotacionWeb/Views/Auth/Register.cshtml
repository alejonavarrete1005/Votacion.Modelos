@model Votacion.Modelos.DTOs.UsuarioRegisterDTO

@{
    ViewData["Title"] = "Registro";
}

<h2>Registro</h2>

<form asp-action="Register" method="post">

    <div class="mb-3">
        <label class="form-label">Nombre completo</label>
        <input asp-for="NombreCompleto" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select asp-for="Rol"
                asp-items="Html.GetEnumSelectList<Votacion.Modelos.Enums.RolUsuario>()"
                class="form-control">
            <option value="">Seleccione un rol</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">
        Registrarse
    </button>

    <a asp-action="Login" class="btn btn-link">
        Ya tengo cuenta
    </a>

</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
