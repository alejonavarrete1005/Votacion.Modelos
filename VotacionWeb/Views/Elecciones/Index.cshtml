@model IEnumerable<Votacion.Modelos.DTOs.EleccionDTO>

@{
    ViewData["Title"] = "Elecciones";
    var ahora = DateTime.UtcNow;
}

<h1>Elecciones disponibles</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    Crear Elección
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tipo</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string estado;

            if (ahora < item.FechaInicio)
                estado = "Pendiente";
            else if (ahora > item.FechaFin)
                estado = "Finalizada";
            else
                estado = "Activa";

            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Tipo</td>
                <td>@item.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.FechaFin.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <span class="badge @(estado == "Activa" ? "bg-success" : "bg-secondary")">
                        @estado
                    </span>
                </td>
                <td>
                    <a asp-controller="Candidatos"
                       asp-action="Index"
                       asp-route-eleccionId="@item.EleccionId"
                       class="btn btn-primary btn-sm">
                        Candidatos
                    </a>

                    <a asp-action="Details"
                       asp-route-id="@item.EleccionId"
                       class="btn btn-info btn-sm">
                        Detalles
                    </a>

                    <a asp-action="Edit"
                       asp-route-id="@item.EleccionId"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.EleccionId"
                       class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

